{
    "viewport": "1120px",
    "gap": "20px",
    "radius": "4px",
    "shadow": "0 0 5px rgba(0, 0, 0, .15)",
    "screen": {
        "sm": "569px",
        "md": "769px",
        "lg": "993px"
    },
    "font": "'Be-Vietnam', sans-serif",
