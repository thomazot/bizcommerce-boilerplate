
/**
 * Mixins
 */
icon(i)
    content: i
    text-transform: none
    font-weight: normal
    font-style: normal
    font-variant: normal
    font-family: 'biz_icons'
    speak: none
    -moz-osx-font-smoothing: grayscale
    -webkit-font-smoothing: antialiased

/**
 * Mixin - Font-weight
 */
font = 'Be-Vietnam', sans-serif
light = 300
regular = 400
medium = 500
semibold = 600
bold = 700
/**
 * Mixin - Viewport
 */
viewport = 1120px
gap = 20px
radius = 4px
/**
 * Mixin - Responsive
 */
screen-sm = 569px
screen-md = 769px
screen-lg = 993px
screen-sm-max = (screen-sm - 1)
screen-md-max = (screen-md - 1)
screen-lg-max = (screen-lg - 1)

minw(w)
    return unquote('(min-width:' + w + ')')

maxw(w)
    return unquote('(max-width:' + w + ')')

media-min-sm = minw(screen-sm)
media-min-md = minw(screen-md)
media-min-lg = minw(screen-lg)
media-max-sm = maxw(screen-sm-max)
media-max-md = maxw(screen-md-max)
media-max-lg = maxw(screen-lg-max)

container()
    margin-right: auto
    margin-left: auto
    max-width: 'calc(100vw - %s)' % gap
    width: viewport

shadowBorder()
    @media media-min-lg
        box-shadow: 800px 0 0 @background, -800px 0 0 @background

    @media media-max-lg
        box-shadow: 300px 0 0 @background, -300px 0 0 @background