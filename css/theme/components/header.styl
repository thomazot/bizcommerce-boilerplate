.header
    height: 90px
    color: var(--primary-contrast)
    gap: gap

    &-container
        position: sticky
        top: 0
        visibility: visible
        background: var(--primary)
        opacity: 1
        transition: all .3s ease-in-out
        transform: translateY(0)

        .header-hidden &
            visibility: hidden
            opacity: 0
            transition: all .3s ease-in-out
            transform: translateY(-10px)

    .mycart
        margin-right: 8px