/*
 * Global
 * Elementos globais que podem ser extendidos ao longo do documento
 */
@css {
    @tailwind base;
    @tailwind components;
    @tailwind utilities;
}

.container
    container()

:root
    --primary: color1_bg
    --primary-hover: color1_bg_hover
    --primary-contrast: color1_font
    --primary-contrast-hover: color1_font_hover
    --secundary: color2_bg
    --secundary-hover: color2_bg_hover
    --secundary-contrast: color2_font
    --secundary-contrast-hover: color2_font_hover
    --tertiary: color3_bg
    --tertiary-hover: color3_bg_hover
    --tertiary-contrast: color3_font
    --tertiary-contrast-hover: color3_font_hover
    --button: button_bg
    --button-hover: button_bg_hover
    --button-contrast: button_font
    --button-contrast-hover: button_font_hover
    // Socials
    --youtube: #cc0404
    --facebook: #3b5998
    --twitter: #00aced
    --pinterest: #cb2027
    --thumblr: #32506d
    --linkedin: #007bb5
    --instagram: #e4405f

/*
 * Base
 * Estilo base do elementos do Html
 */
body
    font-family: font

.wrapper-container
    overflow: visible

.js-stickybit-parent
    padding-top: 140px

/*
 * Components
 * Componentes que se adaptam ao contexto
 */
/*
 * Component - Menssagens
 */
.messages
    > li
        display: block
        margin-bottom: 20px
        padding: 10px 20px
        font-size: 14px

    .success-msg
        border: 1px solid #2baf60
        background: #c8efc0
        color: #1d904b

    .error-msg
        border: 1px solid #d92100
        background: #ffdcdc
        color: #d92100

    .notice-msg
        border: 1px solid #f7be07
        background: #f9f0d5
        color: #f7be07

// Container
.header, .main-container, .footer
    container()

.categories .ul--0
    max-width: viewport

.wrapper
    svg
        fill: currentColor