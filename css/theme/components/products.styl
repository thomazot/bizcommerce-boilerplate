positionArrow = -15px

.products
    padding: gap 0
    color: #111

    @media media-min-lg
        .owl-pagination
            display: none

    @media (max-width: (viewport + 110px))
        position: relative
        overflow: hidden
        max-width: 100%

        &__list
            position: static

    @media (min-width: (viewport + 111px))
        .owl-next
            right: positionArrow

        .owl-prev
            left: positionArrow

    &__list
        margin: '0 -%s' % (gap / 2)

    .carrossel &__item
        padding: 0 (gap / 2)

    .owl-wrapper-outer
        margin: -20px 0
        padding: 20px 0

    &__title
        titleProduct()

    &__item
        padding: 2px

    &__case
        padding: 25px
        border: products-case-border
        border-radius: radius
        box-shadow: none
        text-align: center
        transition: box-shadow .3s ease-in-out

        &:hover
            @media media-min-lg
                box-shadow: 0 0 10px rgba(0, 0, 0, .15)

    &__footer
        margin-top: auto

        .button
            width: 100%
            height: 42px
            border-radius: radius
            background: var(--button)
            box-shadow: none
            color: var(--button-contrast)
            font-weight: bold
            font-size: 14px

            &:hover
                background: var(--button-hover)
                color: var(--button-hover-contrast)

    &__name
        display: inline-block
        margin-bottom: 13px
        text-align: center
        text-transform: uppercase
        font-weight: medium
        font-size: 14px
        line-height: 18px