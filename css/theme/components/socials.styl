.socials
    &__title
        font-weight: bold
        font-size: 16px

    &__link
        margin-right: 15px
        width: 24px
        height: 24px

    &__svg
        height: 23px

    .facebook
        .socials
            &__link
                display: flex
                justify-content: center
                align-items: flex-end
                width: 24px
                height: 24px
                border-radius: 50%
                background: var(--facebook)

                svg path
                    fill: var(--primary)

            &__svg
                height: 20px